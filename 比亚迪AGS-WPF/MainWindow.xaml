<Window
    x:Class="比亚迪AGS_WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:比亚迪AGS_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title, Mode=OneWay}"
    Width="900"
    Height="600"
    d:DataContext="{d:DesignInstance local:MainViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="content">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="leftbody" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid
                    x:Name="lbheader"
                    Grid.Row="0"
                    Background="#00B0F0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="173*" />
                    </Grid.ColumnDefinitions>
                    <UniformGrid Grid.Column="0" Columns="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Fill="{Binding ServerStatus, Mode=OneWay}" Style="{StaticResource LedStatus}" />
                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    PLC
                                </TextBlock>
                            </Border>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Fill="{Binding RobotStatus, Mode=OneWay, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=Chartreuse}" Style="{StaticResource LedStatus}" />
                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    机器人
                                </TextBlock>
                            </Border>

                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Fill="{Binding AlarmStatus, Mode=OneWay, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=Chartreuse}" Style="{StaticResource LedStatus}" />

                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    报警
                                </TextBlock>
                            </Border>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Fill="{Binding TcpStatus}" Style="{StaticResource LedStatus}" />

                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    TCP
                                </TextBlock>
                            </Border>
                        </Grid>
                    </UniformGrid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="53*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="36"
                                Text="{Binding Title, Mode=OneWay}" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBlock Margin="10,3" TextAlignment="Right">
                                <Run>版本号:</Run>
                                <Run Text="{Binding Version, Mode=OneWay}" />
                            </TextBlock>
                        </Grid>
                        <Border
                            Grid.Row="1"
                            BorderBrush="Black"
                            BorderThickness="0,2,0,0" />
                    </Grid>
                    <Border Grid.Column="0" Style="{StaticResource GridBorder}" />
                    <Border Grid.Column="1" Style="{StaticResource GridBorder}" />
                </Grid>
                <Grid x:Name="lbsheet2" Grid.Row="1">
                    <ContentControl x:Name="Text" Content="{Binding Body}">
                        <!--  使用内容呈现器来显示用户控件界面 Content="{Binding Body}" prism:RegionManager.RegionName="ContentRegion"  -->
                    </ContentControl>
                </Grid>
                <Grid x:Name="lbbuttons" Grid.Row="2">
                    <UniformGrid Columns="8">
                        <Button
                            Command="{Binding OpenCommand}"
                            CommandParameter="TestLogView"
                            Style="{StaticResource LbbStyle}">开始运行</Button>
                        <Button 
                            Command="{Binding OpenCommand}"
                            CommandParameter="TestLogView"
                            Style="{StaticResource LbbStyle}">停止</Button>
                        <Button
                            Command="{Binding OpenCommand}"
                            CommandParameter="TestLogView"
                            Style="{StaticResource LbbStyle}">
                            监视页面
                        </Button>
                        <Button
                            Command="{Binding OpenCommand}"
                            CommandParameter="ConfigView"
                            Style="{StaticResource LbbStyle}">
                            配置信息
                        </Button>
                        <Button
                            Command="{Binding OpenCommand}"
                            CommandParameter="EnquireView"
                            Style="{StaticResource LbbStyle}">
                            数据查询
                        </Button>
                        <Button
                            Command="{Binding OpenCommand}"
                            CommandParameter="UserView"
                            Style="{StaticResource LbbStyle}">用户变更</Button>
                        <Button Style="{StaticResource LbbStyle}">遇错忽略</Button>
                        <Button Command="{Binding ExitCommand}" Style="{StaticResource LbbExitStyle}">退出</Button>
                    </UniformGrid>
                </Grid>
                <Border Grid.Row="0" Style="{StaticResource GridBorder}" />
                <Border Grid.Row="1" Style="{StaticResource GridBorder}" />
                <Border Grid.Row="2" Style="{StaticResource GridBorder}" />
                <Border Grid.Row="3" Style="{StaticResource GridBorder}" />
            </Grid>
            <Grid
                x:Name="rightbody"
                Grid.Column="1"
                Background="#C5D9F1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="153*" />
                    <RowDefinition Height="131*" />
                    <RowDefinition Height="70*" />
                    <RowDefinition Height="70*" />
                    <RowDefinition Height="117*" />

                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25*" />
                        <RowDefinition Height="100*" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        Background="#00B0F0"
                        Style="{StaticResource GridBorder}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{Binding CurrentTIme}" />
                    </Border>
                    <Grid Grid.Row="1" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock>用户名</TextBlock>
                        </Border>
                        <UniformGrid
                            Grid.Row="0"
                            Grid.Column="1"
                            Columns="3">
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock x:Name="Name" Text="{Binding UserName}" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,1,1">
                                <TextBlock>模式</TextBlock>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,1,1">
                                <TextBlock x:Name="Mode" Text="{Binding Mode}" />
                            </Border>
                        </UniformGrid>
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock>产品编码</TextBlock>
                        </Border>
                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock x:Name="产品编码" Text="{Binding ProductId}" />
                        </Border>
                        <Border
                            Grid.Row="2"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock>产品名称</TextBlock>
                        </Border>
                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock x:Name="产品名称" Text="{Binding ProductName}" />
                        </Border>

                        <Border
                            Grid.Row="3"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock>产品代码</TextBlock>
                        </Border>
                        <Border
                            Grid.Row="3"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock x:Name="产品代码" Text="{Binding ProductCode}" />
                        </Border>
                        <Border
                            Grid.Row="4"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock>工装绑定</TextBlock>
                        </Border>
                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock x:Name="工装绑定" Text="{Binding FixtureBinding}" />
                        </Border>
                        <Border
                            Grid.Row="5"
                            Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock />
                        </Border>
                        <Border
                            Grid.Row="5"
                            Grid.Column="1"
                            BorderBrush="Black"
                            BorderThickness="0,0,1,1">
                            <TextBlock />
                        </Border>

                    </Grid>
                    <Border Grid.Row="2" Style="{StaticResource GridBorder}">
                        <TextBlock HorizontalAlignment="Center" Text="{Binding ProductBarcode}" />
                    </Border>

                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            TextWrapping="WrapWithOverflow">
                            运行状态
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding RunningStatus}"
                            TextWrapping="WrapWithOverflow" />
                    </Border>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            TextWrapping="WrapWithOverflow">
                            操作提示
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding OperationPrompt}"
                            TextWrapping="WrapWithOverflow" />
                    </Border>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            TextWrapping="WrapWithOverflow">
                            产品状态
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding ProductStatus}"
                            TextWrapping="WrapWithOverflow" />
                    </Border>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            TextWrapping="WrapWithOverflow">
                            生产信息
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <Grid Grid.Row="1" Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>总次数</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding TotalCount}" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>保养计数</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding Maintenance}" />
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>工单数量</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding WorkOderQty}" />
                            </Border>

                            <Border
                                Grid.Row="3"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>完成数</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="3"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding CompleteQty}" />
                            </Border>
                            <Border
                                Grid.Row="4"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>合格数</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="4"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding OkQty}" />
                            </Border>
                            <Border
                                Grid.Row="5"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>合格率</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="5"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding YieldRate}" />
                            </Border>
                            <Border
                                Grid.Row="6"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock>生产时间</TextBlock>
                            </Border>
                            <Border
                                Grid.Row="6"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBlock Text="{Binding ProductTime}" />
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <Border Grid.Column="0" Style="{StaticResource GridBorder}" />
            <Border Grid.Column="1" Style="{StaticResource GridBorder}" />
        </Grid>

        <Grid
            x:Name="footer"
            Grid.Row="1"
            Background="#F7F700">
            <Border Style="{StaticResource GridBorder}">
                <TextBlock TextAlignment="Center">
                    <Run>供方信息:</Run>
                    <Run>浙江田中精机股份有限公司</Run>
                    <Run />
                    <Run>联系电话:</Run>
                    <Run Text="{Binding PhoneNumber}" />
                </TextBlock>
            </Border>
        </Grid>
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Style="{StaticResource GridBorder}" />
    </Grid>

</Window>