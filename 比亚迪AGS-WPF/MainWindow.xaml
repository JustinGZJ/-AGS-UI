<Window x:Class="比亚迪AGS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:比亚迪AGS_WPF"
        mc:Ignorable="d"

        Title="MainWindow" Height="600" Width="900">
    <Window.Resources>
        <Style x:Key="LbbStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#BCE863" Offset="0.3" />
                        <GradientStop Color="#6F8B34" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Margin" Value="10"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#aaA8E063" Offset="0.3" />
                                            <GradientStop Color="#aa6F8B34" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#aa8BC34A" Offset="0.3" />
                                            <GradientStop Color="#aa6F8B34" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LbbExitStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF7F7A" Offset="0.3" />
                        <GradientStop Color="#AF3733" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#AAFF7F7A" Offset="0.3" />
                                            <GradientStop Color="#AAAF3733" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#AAFF7F7A" Offset="0.5" />
                                            <GradientStop Color="#AAAF3733" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LedStatus" TargetType="Ellipse">
            <Setter Property="Margin" Value="8" />
            <Setter Property="Stroke" Value="White" />
            <Setter Property="Fill" Value="Gray"></Setter>
            <Setter Property="Height" Value="{Binding ActualWidth, RelativeSource={ RelativeSource Self}}" />

        </Style>
        <Style x:Key="StatusBorder" TargetType="Border">
            <Setter Property="Background" Value="#4F81BD" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Margin" Value="3"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>
        <Style x:Key="GridBorder" TargetType="Border">
            <Setter Property="BorderThickness" Value="2 2 1 1" />
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>


    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="content">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Background="White" x:Name="leftbody">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" x:Name="lbheader" Background="#00B0F0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="173*" />
                    </Grid.ColumnDefinitions>
                    <UniformGrid Grid.Column="0" Columns="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Style="{StaticResource LedStatus}" />
                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">PLC</TextBlock>
                            </Border>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Style="{StaticResource LedStatus}" />
                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">机器人</TextBlock>
                            </Border>

                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Style="{StaticResource LedStatus}" />

                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">报警</TextBlock>
                            </Border>
                        </Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="12*" />
                            </Grid.RowDefinitions>
                            <Ellipse Style="{StaticResource LedStatus}" />

                            <Border Grid.Row="1" Style="{StaticResource StatusBorder}">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">其他</TextBlock>
                            </Border>
                        </Grid>
                    </UniformGrid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="53*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">装配机</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBlock TextAlignment="Right" Margin="10 3">
                                <Run>版本号:</Run>
                                <Run>1.0.0</Run>
                            </TextBlock>
                        </Grid>
                        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0 2 0 0" />
                    </Grid>
                    <Border Grid.Column="0" Style="{StaticResource GridBorder}"></Border>
                    <Border Grid.Column="1" Style="{StaticResource GridBorder}"></Border>
                </Grid>
                <Grid Grid.Row="1" x:Name="lbsheet1">

                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" />
                </Grid>
                <Grid Grid.Row="2" x:Name="lbsheet2">

                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" />
                </Grid>
                <Grid Grid.Row="3" x:Name="lbbuttons">
                    <UniformGrid Columns="8">
                        <Button Style="{StaticResource LbbStyle}">开始运行</Button>
                        <Button Style="{StaticResource LbbStyle}">停止</Button>
                        <Button Style="{StaticResource LbbStyle}">监视页面</Button>
                        <Button Style="{StaticResource LbbStyle}">配置信息</Button>
                        <Button Style="{StaticResource LbbStyle}">数据查询</Button>
                        <Button Style="{StaticResource LbbStyle}">用户变更</Button>
                        <Button Style="{StaticResource LbbStyle}">遇错忽略</Button>
                        <Button Style="{StaticResource LbbExitStyle}">退出</Button>
                    </UniformGrid>
                </Grid>
                <Border Grid.Row="0" Style="{StaticResource GridBorder}"></Border>
                <Border Grid.Row="1" Style="{StaticResource GridBorder}"></Border>
                <Border Grid.Row="2" Style="{StaticResource GridBorder}"></Border>
                <Border Grid.Row="3" Style="{StaticResource GridBorder}"></Border>
            </Grid>
            <Grid Grid.Column="1" Background="#C5D9F1" x:Name="rightbody">
                <Grid.RowDefinitions>
                    <RowDefinition Height="153*" />
                    <RowDefinition Height="131*" />
                    <RowDefinition Height="70*" />
                    <RowDefinition Height="70*" />
                    <RowDefinition Height="117*" />

                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25*" />
                        <RowDefinition Height="100*" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{StaticResource GridBorder}" Background="#00B0F0">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                                   FontWeight="Bold">
                            当前时间
                        </TextBlock>
                    </Border>
                    <Grid Grid.Row="1" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock>用户名</TextBlock>
                        </Border>
                        <UniformGrid Grid.Row="0" Grid.Column="1" Columns="3">
                            <Border Grid.Row="0" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock x:Name="Name"></TextBlock>
                            </Border>
                            <Border BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>模式</TextBlock>
                            </Border>
                            <Border BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock x:Name="Mode"></TextBlock>
                            </Border>
                        </UniformGrid>
                        <Border Grid.Row="1" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock>产品编码</TextBlock>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock x:Name="产品编码"></TextBlock>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock>产品名称</TextBlock>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock x:Name="产品名称"></TextBlock>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock>产品代码</TextBlock>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock x:Name="产品代码"></TextBlock>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock>工装绑定</TextBlock>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock x:Name="工装绑定"></TextBlock>
                        </Border>
                        <Border Grid.Row="5" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock></TextBlock>
                        </Border>
                        <Border Grid.Row="5" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                            <TextBlock></TextBlock>
                        </Border>

                    </Grid>
                    <Border Grid.Row="2" Style="{StaticResource GridBorder}">
                        <TextBlock HorizontalAlignment="Center">
                            条码显示区域，显示当前条码
                        </TextBlock>
                    </Border>

                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock FontSize="24" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            运行状态
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Grid.Column="1" BorderThickness="1">
                        <TextBlock FontSize="16" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            即设备运行指针，设备正在进行那个项目，哪那里有异常信息以及MES状态反调等在本栏显示，便问题的处理
                        </TextBlock>
                    </Border>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock FontSize="24" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            操作提示
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Grid.Column="1" BorderThickness="1">
                        <TextBlock FontSize="16" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            操作提示
                        </TextBlock>
                    </Border>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock FontSize="24" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            产品状态
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Grid.Column="1" BorderThickness="1">
                        <TextBlock FontSize="16" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            合格/不合格
                        </TextBlock>
                    </Border>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock FontSize="24" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            生产信息
                        </TextBlock>
                    </Border>
                    <Border BorderBrush="Black" Grid.Column="1" BorderThickness="1">
                        <Grid Grid.Row="1" Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>总次数</TextBlock>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>保养计数</TextBlock>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>工单数量</TextBlock>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>完成数</TextBlock>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>合格数</TextBlock>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>
                            <Border Grid.Row="5" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>合格率</TextBlock>
                            </Border>
                            <Border Grid.Row="5" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>
                            <Border Grid.Row="6" Grid.Column="0" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock>生产时间</TextBlock>
                            </Border>
                            <Border Grid.Row="6" Grid.Column="1" BorderThickness=" 0 0 1 1" BorderBrush="Black">
                                <TextBlock></TextBlock>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <Border Grid.Column="0" Style="{StaticResource GridBorder}"></Border>
            <Border Grid.Column="1" Style="{StaticResource GridBorder}"></Border>
        </Grid>
        <Grid x:Name="footer" Grid.Row="1" Background="#F7F700">
            <Border Style="{StaticResource GridBorder}">
                <TextBlock TextAlignment="Center">
                    <Run>供方信息:</Run>
                    <Run>浙江田中精机股份有限公司</Run>
                    <Run> </Run>
                    <Run>联系电话:</Run>
                    <Run>XXXXXXXXXXXXXXXXX</Run>
                </TextBlock>
            </Border>
        </Grid>
        <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource GridBorder}">

        </Border>
    </Grid>

</Window>