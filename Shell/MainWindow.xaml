<Window x:Class="Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        WindowState="Maximized"
        
        Title="Shell" Height="450" Width="800">
    <Grid>
    
        <DockingManager x:Name="dockingManager">
            <LayoutRoot>
                <LayoutPanel Orientation="Horizontal">
                    <LayoutDocumentPaneGroup>
                        <LayoutDocumentPane x:Name="documentPane">
                            <!-- 在这里动态添加 LayoutDocument -->
                            <!-- <LayoutDocument Title="My UserControl"> -->
                            <!--     <TabControl x:Name="tabControl"  Visibility="Hidden"/> -->
                            <!-- </LayoutDocument> -->
                        </LayoutDocumentPane>
                    </LayoutDocumentPaneGroup>
                </LayoutPanel>
            </LayoutRoot>
        </DockingManager>
        <Label x:Name="Status" HorizontalAlignment="Center" VerticalAlignment="Center">载入中...</Label>
    </Grid>
</Window>
